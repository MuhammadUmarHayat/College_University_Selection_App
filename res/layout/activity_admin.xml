<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_back"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin">

    <TextView
        android:id="@+id/tvAdmin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:id="@+id/adminbtnsignupMgr"
        android:text="Add Institute Manager"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:id="@+id/adminAddInstitutes"
        android:text="Add institutes"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:id="@+id/adminAddProgram"
        android:text="Add Programs"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:textColor="@color/white"
        android:id="@+id/adminCollegeList"
        android:text="List of Colleges">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:textColor="@color/white"
        android:id="@+id/adminUniversityList"
        android:text="List of Universities"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:textColor="@color/white"
        android:id="@+id/adminGirlsInstitutes"
        android:text="List of institutes for Girls"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:textColor="@color/white"
        android:id="@+id/adminBoysInstitutes"
        android:text="List of institutes for Boys"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:textColor="@color/white"
        android:id="@+id/adminLogout"
        android:text="Logout"></Button>

</LinearLayout>